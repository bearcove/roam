{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  },
  "css": {
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "nursery": {
          "noUnknownAtRule": "off"
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "target",
      ".git",
      "**/*.min.js",
      "**/*.min.css"
    ]
  }
}
