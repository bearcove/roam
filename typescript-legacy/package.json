{
  "name": "@bearcove/rapace",
  "version": "0.1.0",
  "description": "TypeScript client for the Rapace RPC protocol - high-performance binary RPC over WebSocket",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./postcard": {
      "types": "./dist/postcard/index.d.ts",
      "import": "./dist/postcard/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "node --test --import tsx src/postcard/varint.test.ts src/rapace/frame.test.ts src/rapace/method-id.test.ts src/integration.test.ts src/coverage.test.ts",
    "test:coverage": "node --test --import tsx src/coverage.test.ts",
    "test:unit": "SKIP_INTEGRATION=1 node --test --import tsx src/postcard/varint.test.ts src/rapace/frame.test.ts src/rapace/method-id.test.ts",
    "test:integration": "./scripts/integration-test.sh",
    "test:browser": "npx playwright test",
    "serve:test": "node scripts/serve-test.mjs",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "rpc",
    "rapace",
    "postcard",
    "websocket",
    "binary",
    "serialization",
    "client",
    "typescript",
    "browser",
    "nodejs"
  ],
  "author": {
    "name": "Amos Wenger",
    "email": "amos@bearcove.eu",
    "url": "https://fasterthanli.me"
  },
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bearcove/rapace.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/bearcove/rapace/issues"
  },
  "homepage": "https://github.com/bearcove/rapace/tree/main/typescript#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
